<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="@color/nice_black">

    <Button
        android:id="@+id/signOutBtnSettings"
        android:layout_width="148dp"
        android:layout_height="76dp"
        android:backgroundTint="@color/secondary_color"
        android:text="Sign Out "
        android:textColor="@color/tea_green"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.79" />

    <EditText
        android:id="@+id/nameSettingsEdit"
        android:layout_width="245dp"
        android:layout_height="65dp"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/calm_green"
        android:ellipsize="start"
        android:ems="10"
        android:fontFamily="@font/metropolis"
        android:gravity="center_horizontal"
        android:hint="Change Name"
        android:inputType="text"
        android:textColor="@color/calm_green"
        android:textColorHint="@color/calm_green"
        app:layout_constraintBottom_toTopOf="@+id/signOutBtnSettings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.538" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/passwordSettingsEdit"
        android:layout_width="243dp"
        android:layout_height="65dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="108dp"
        android:backgroundTint="@color/calm_green"
        android:ellipsize="start"
        android:fontFamily="@font/metropolis"
        android:gravity="center_horizontal"
        android:hint="Change Password"
        android:password="true"
        android:textColor="@color/calm_green"
        android:textColorHint="@color/calm_green"
        app:layout_constraintBottom_toTopOf="@+id/signOutBtnSettings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameSettingsEdit" />

    <Button
        android:id="@+id/deleteAccountButton"
        android:layout_width="177dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/secondary_color"
        android:text="Delete Account"
        android:textColor="@color/tea_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signOutBtnSettings"
        app:layout_constraintVertical_bias="0.506" />

    <TextView
        android:id="@+id/accountHeader"
        android:layout_width="292dp"
        android:layout_height="96dp"
        android:fontFamily="@font/metropolis"
        android:text="Account Settings"
        android:textAlignment="center"
        android:textColor="@color/calm_green"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/nameSettingsEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.379" />


</androidx.constraintlayout.widget.ConstraintLayout>