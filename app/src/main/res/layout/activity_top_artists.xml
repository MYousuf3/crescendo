<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topArtistsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#67CA71">

    <TextView
        android:id="@+id/topArtistsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Your Top Artists"
        android:textColor="#003194"
        android:textSize="24sp" />

    <!-- Song 1 -->
    <LinearLayout
        android:id="@+id/artist1Container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topArtistsTitle"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/artistNumber1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/metropolis"
            android:text="1"
            android:textColor="#003194"
            android:textSize="48sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/artistThumbnail1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/artistTitle1"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/metropolis"
            android:text="Artist 1"
            android:textColor="#003194"
            android:textSize="18sp"
            android:textStyle="italic" />
    </LinearLayout>
    <!-- Song 2 -->
    <LinearLayout
        android:id="@+id/artist2Container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/artist1Container"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/artistNumber2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:fontFamily="@font/metropolis"
            android:textColor="#003194"
            android:textSize="48sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/artistThumbnail2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/artistTitle2"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/metropolis"
            android:text="Artist 2"
            android:textColor="#003194"
            android:textSize="18sp"
            android:textStyle="italic"/>
    </LinearLayout>

    <!-- Song 3 -->
    <LinearLayout
        android:id="@+id/artist3Container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/artist2Container"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/artistNumber3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="#003194"
            android:fontFamily="@font/metropolis"
            android:textSize="48sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/artistThumbnail3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/artistTitle3"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Artist 3"
            android:textColor="#003194"
            android:textSize="18sp"
            android:fontFamily="@font/metropolis"
            android:textStyle="italic"/>
    </LinearLayout>

    <!-- Song 4 -->
    <LinearLayout
        android:id="@+id/artist4Container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/artist3Container"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/artistNumber4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="#003194"
            android:textSize="48sp"
            android:textStyle="bold"
            android:fontFamily="@font/metropolis"/>

        <ImageView
            android:id="@+id/artistThumbnail4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/artistTitle4"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Artist 4"
            android:textColor="#003194"
            android:textSize="18sp"
            android:fontFamily="@font/metropolis"
            android:textStyle="italic"/>
    </LinearLayout>

    <!-- Song 5 -->
    <LinearLayout
        android:id="@+id/artist5Container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/artist4Container"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/artistNumber5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="#003194"
            android:textSize="48sp"
            android:fontFamily="@font/metropolis"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/artistThumbnail5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/artistTitle5"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Artist 5"
            android:textColor="#003194"
            android:textSize="18sp"
            android:fontFamily="@font/metropolis"
            android:textStyle="italic"/>
    </LinearLayout>
    <!-- Share button -->
    <ImageButton
        android:id="@+id/shareButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="?attr/selectableItemBackground"
        android:src="@android:drawable/ic_menu_share" />

    <!-- Share text -->
    <TextView
        android:id="@+id/shareText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/shareButton"
        android:layout_centerHorizontal="true"
        android:text="Share This Story!"
        android:textColor="#003194" />
</RelativeLayout>