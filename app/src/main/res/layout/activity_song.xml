<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/songView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_template1"
    android:orientation="vertical">

<!--    <ImageView-->
<!--        android:id="@+id/songImage"-->
<!--        android:layout_width="250dp"-->
<!--        android:layout_height="250dp"-->
<!--        android:layout_gravity="center_horizontal"-->
<!--        android:layout_marginTop="20dp"-->
<!--        android:scaleType="centerCrop" />-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/songFrame"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/image_frame1" />

        <ImageView
            android:id="@+id/songImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

    </FrameLayout>

    <TextView
        android:id="@+id/songName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/metropolis"
        android:gravity="center"
        android:text="Song Name"
        android:textColor="@color/nice_black"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/songArtist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/metropolis"
        android:gravity="center"
        android:text="By Artist"
        android:textColor="@color/nice_black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/songTagline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="@color/nice_black"
        android:text="Song Tagline or Description"
        android:textSize="20sp" />

</LinearLayout>
